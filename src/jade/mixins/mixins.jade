mixin nav-link(links)
	each item in links
		+e('li').item
			+e('a').link(href= item.href, id= item.id, data-text= item.link)
				+e('span').icon
					+e('img').img(src='images/' + item.icon + '.svg')



mixin interests-list(list)
	each item in list
		+e('li').item
			+e('div').wrapper
				+e('span').text= item.title
				+e('img').icon(src='images/' + item.icon + '.svg')



mixin history-list(list)
	- var n = 1

	each item in list
		+e('li').item= n++
			if n % 2 == 0
				+e('div').col._left
					+e('div').wrapper
						+e('div').img
							+e('img').icon(src='images/' + item.icon + '.svg')
							+e('span').year= item.year
				+e('div').col._right
					+e('div').content
						+e('h4').title= item.title
						+e('p').text= item.text
			else
				+e('div').col._right
					+e('div').content
						+e('h4').title= item.title
						+e('p').text= item.text
				+e('div').col._left
					+e('div').wrapper
						+e('div').img
							+e('img').icon(src='images/' + item.icon + '.svg')
							+e('span').year= item.year
		

		
mixin portfolio-list(list)
	each item in list
		+e('li').item
			+e('div').wrapper
				svg.icon('xmlns'='http://www.w3.org/2000/svg' width='100%' height='100%')
					line.icon__top(x1='0' y1='0' x2='900' y2='0')
					line.icon__left(x1='0' y1='460' x2='0' y2='-920')
					line.icon__bottom(x1='300' y1='460' x2='-600' y2='460')
					line.icon__right(x1='300' y1='0' x2='300' y2='1380')